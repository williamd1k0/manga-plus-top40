{% extends "layouts/chart.html.j2" %}

{% block content %}
	{{ super() }}
	<div class="main-container {% if site.ads_enabled %}blur{% endif %}">
		<div class="fixed top left">
			<form action="">
				<input name="from" type="date" />~<input name="to" type="date" />
				<button type="submit">Apply</button>
			</form>
		</div>
		<div class="fixed top right">
			<button id="range-1w">1W</button>
			<button id="range-1m">1M</button>
			<button id="range-1y">1Y</button>
			<button id="range-ytd">YTD</button>
			<button id="range-all">All</button>
		</div>
		<canvas id="chart-all"></canvas>
		<button id="toggle-selection-btn" class="fixed bottom left">Toggle Titles</button>
		<div class="fixed bottom right">
			<a href="{{ site.mangaplusurl }}">
				<img src="https://img.shields.io/static/v1?style=flat&logo=data:image/png;base64,&label=MANGA%20Plus&message=read&color=red" />
			</a>
			<a href="{{ site.repourl }}">
				<img src="https://img.shields.io/static/v1?style=flat&logo=github&label=GitHub&message=fork&color=purple" />
			</a>
		</div>
	</div>
{% endblock %}
